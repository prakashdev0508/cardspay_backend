generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                  String  @id @default(cuid())
  company_name        String
  registration_number String?
  address             String?
  email               String  @unique

  additinal_information Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id    String @id @default(cuid())
  name  String
  email String @unique
}
